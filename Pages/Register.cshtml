@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="text-center">
    <h1 class="display-4">Регистрация</h1>
    @if (Request.Method == "GET")
    {
        <form method="post">
            <table>
                <tr>
                    <td>E-Mail:</td>
                    <td>
                        <input type="email" name="email"/>
                    </td>
                </tr>
                <tr>
                    <td>Никнейм:</td>
                    <td>
                        <input type="text" name="nickname"/>
                    </td>
                </tr>
                <tr>
                    <td>Имя:</td>
                    <td>
                        <input type="text" name="firstName"/>
                    </td>
                </tr>
                <tr>
                    <td>Фамилия:</td>
                    <td>
                        <input type="text" name="lastName"/>
                    </td>
                </tr>
                <tr>
                    <td>Номер телефона:</td>
                    <td>
                        <input type="tel" name="phone"/>
                    </td>
                </tr>
                <tr>
                    <td>Дата рождения:</td>
                    <td>
                        <input type="date" name="born"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit"/>
                    </td>
                </tr>
            </table>
        </form>
    }

    @if (Model.IsRegistrationComplete)
    {
        <p>Вы успешно зарегистрированы!</p>
    }

    @if (Model.IsEmailOccupied)
    {
        <p>Ошибка! Email уже занят!</p>
    }

    @if (Model.IsNicknameOccupied)
    {
        <p>Ошибка! Никнейм уже занят!</p>
    }

    @if (Model.IsPhoneOccupied)
    {
        <p>Ошибка! Номер телефона уже занят!</p>
    }
</div>